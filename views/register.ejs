<div class="container border border-black mt-5 mb-3">
  <div class="row justify-content-md-center">
    <div class="col-2"></div>
    <div class="col-8 ">
      <h2>Login</h2>
      <div class="loginButton">
        <h6>Already have an account?</h6>
        <form action="/users/login" method="GET">
          <button class="btn btn-primary mb-3">Login</button>
        </form>
      </div>
    </div>
    <div class="col-2"></div>
  </div>
</div>

<div class="container ">
  <div class="row justify-content-center">
    <div class="col-2"></div>
    <div class="col-8">
      <h1>Register Yourself</h1>
      <% include ./partials/messages %>
    </div>
    <div class="col-2"></div>
  </div>
</div>
<div class="container mt-2 ">
  <div class="row justify-content-md-center">
    <div class="col-2"></div>
    <div class="col-8">
      <div class="registration-form">

        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name"><h6>Name</h6></label>
            <input
              type="text"
              placeholder="Name.."
              class="form-control"
              id="name-field"
              name="name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="email"><h6>Email</h6></label>
            <input
              type="email"
              placeholder="Email.."
              class="form-control"
              id="email-field"
              name="email"
              value="<%= typeof email != 'undefined' ? email : '' %>"

            />
            <small id="email-field-subtxt" class="form-text text-muted"
              >We will never share your email with anyone else.</small
            >
          </div>

          <div class="form-group">
            <label for="password"><h6>Password</h6></label>
            <input
              type="password"
              placeholder="Enter your password.."
              class="form-control"
              name="password"
              id="password-field"
            />
          </div>
          <div class="form-group">
            <label for="password2"> <h6>Re-enter your password</h6></label>
            <input
              type="password"
              placeholder="Enter your password again.."
              class="form-control"
              name="password2"
              id="password-field2"
            />
          </div>
          <button class="form-control btn btn-primary" type="submit">
            Register
          </button>
        </form>
      </div>
    </div>
    <div class="col-2"></div>
  </div>
</div>
